      <div class="hamburger">
         <span class="bar"></span>
         <span class="bar"></span>
         <span class="bar"></span>
      </div>
   </nav>
</header>
      
      <!-- Form (start) -->
      <div class="form-section contact">
         <div class="form">
            <div class="success">
               <span class="success-close">&times;</span>
               <p><strong>Success!</strong> Your message has been successfully sent</p>
            </div>
            <form class="form-content" method="POST" action="/email">
               <h1>Get in touch</h1>
               <label for="fname"></label>
               <input type="text" name="fname" placeholder="First Name" required>
               <label for="lname"></label>
               <input type="text" name="lname" placeholder="Last Name" required>
               <label for="email"></label>
               <input type="email" name="email" placeholder="Email" required>
               <textarea name="message" placeholder="Write a message..."></textarea>
               <input type="submit" value="Submit">
            </form>
         </div>
      </div>
      <!-- Form (end) -->

      <!-- Footer (start) -->
      <footer class="footer footer-contact">
         <img src="images/mda.png" loading="lazy" alt="logo" class="footer-logo">
         <section class="bottom-nav">
            <a href="/" rel="noopener">Home</a>
            <a href="courses" rel="noopener">Courses</a>
            <a href="contact" rel="noopener">Contact Us</a>
            <a href="signup" rel="noopener">Sign Up</a>
         </section>

         <!-- Rrjetet sociale -->
         <section class="social">
            <a href="https://github.com/MrMothDevs" target="_blank" title="Github/MrMothDevs" rel="noopener"><i class="fab fa-github"></i></a>
            <a href="https://www.youtube.com/channel/UCnPiMm-Jp4P5B2dy7SstDjA" target="_blank" title="Youtube/MrMoth" rel="noopener"><i class="fab fa-youtube"></i></a>
            <i class="fab fa-twitter"></i>
            <a href="https://discord.io/remixor" target="_blank" rel="noopener"><i class="fab fa-discord" title="Discord Server/Remixor"></i></a>
         </section>
         <hr>
         <p>&copy; Copyright by <strong><a href="#home" title="Go to Top" rel="noopener">MDA</a></strong> 2021. All Rights Reversed</p>
      </footer>
      <!-- Footer (start) -->

      
      <!-- JavaScript -->

      <!-- JS per funksionin e preloaderit -->
