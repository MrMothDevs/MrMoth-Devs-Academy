<!-- Form (start) -->
<div class="form-section login">
   <div class="form">
      <% if(typeof alert != 'undefined') { %>
         <% alert.forEach(function(error) { %>
      <div class="alert">
         <span class="alertclose" onclick="this.parentElement.style.display='none';">&times;</span>
         <p><strong>Warning!</strong>  <%= error.msg %></p>
      </div>
      <% }) %>
      <% } %>
      <% if(typeof alert2 != 'undefined') { %>
      <div class="alert">
         <span class="alertclose" onclick="this.parentElement.style.display='none';">&times;</span>
         <p><strong>Warning!</strong>  <%= alert2.msg %></p>
      </div>
      <% } %>
      <form class="form-content" method="POST" action="/login">
         <h1>Login to your account</h1>
         <p>To stick together with a source of quality</p>
         <label for="name"></label>
         <input type="text" name="username" placeholder="Username" autocomplete="username" required>
         <label for="password"></label>
         <input type="password" name="password" placeholder="Password" minlength="8" id="passw" required>
         <i id="passeye" class="far fa-eye" onclick="viewPassword()"></i>
         <label for="check" class="remember">
         <input type="checkbox" name="remember" class="remember-check" checked>
         Remember me
         </label>
         <p>By clicking Login, you agree to our <a href="#"> Terms & Policy</a>.</p>
         <input type="submit" value="Login">
         <p>Don't have an account? <a href="signup">Sign Up</a> NOW!</p>
         <p class="forgot-pass">Forgot <a href="#">password?</a></p>
      </form>
      
   </div>
</div>
<!-- Form (end) -->

