<%- include partials/header.ejs %>

      <!-- Form (start) -->
      <div class="form-section">
         <div class="form">
            <form method="POST" action="/signup">
               <h1>Create your accoount today</h1>
               <p>To stick together with a source of quality</p>
               <label for="name"></label>
               <input type="text" name="username" placeholder="Full Name" autocomplete="username" required>
               <label for="email"></label>
               <input type="email" name="email" placeholder="Email address" required>
               <label for="birthday"></label>
               <input type="text" class="birthday" name="birthday" placeholder="Birthday" required onfocus="(this.type='date')" onblur="(this.type='text')">
               <select name="gender" class="gender" required>
                  <option value="" selected disabled hidden>Gender</option>
                  <option value="male" class="gender-option">Male</option>
                  <option value="female" class="gender-option">Female</option>
                  <option value="other" class="gender-option">Other</option>
               </select>
               <label for="password"></label>
               <input type="password" name="password" placeholder="Password" minlength="8" id="passw" required>
               <i id="passeye" class="far fa-eye" onclick="viewPassword()"></i>
               <label for="repeat"></label>
               <input type="password" name="passw-repeat" placeholder="Repeat password" min-length="8" id="repeat-passw" required> 
               <i id="repeat-eye" class="far fa-eye" onclick="repeatPass()"></i>
               <label for="check" class="remember">
               <input type="checkbox" name="remember" class="remember-check" checked>
               Remember me
               </label>
               <p>By creating this account, you agree to our <a href="#"> Terms & Policy</a>.</p>
               <input type="submit" value="Sign Up">
               <p>Already have an account? <a href="login">Login</a> NOW!</p>
            </form>
         </div>
      </div>
      <!-- Form (end) -->

